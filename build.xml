<?xml version="1.0" encoding="UTF-8"?>
<project name="PowPow">

    <taskdef name="latex" classname="de.dokutransdata.antlatex.LaTeX"  
        classpath="util/ant_latex_0.0.9_1.jar"/>

    <target name="latex">
        <latex clean="on" pdftex="on" workingdir="src/main/latex">
            <fileset dir="src/main/latex">
                <include name="*.tex"/>
            </fileset>
        </latex>
    </target>
    
</project>

